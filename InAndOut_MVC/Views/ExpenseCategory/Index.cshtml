@model IEnumerable<InAndOut_MVC.Models.ExpenseCategory>

<div class="container-p3">
    <div class="row-pt4">
        <div class="col-6">
            <h2 class="text-primary">Categories List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary">Create new Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category name
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                <tr>
                    <td width="50%">@category.CategoryName</td>
                    <td width="50%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ExpenseCategory" asp-action="Update" asp-route-Id="@category.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No category created yet</p>
    }

</div>